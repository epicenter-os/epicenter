{
	"name": "@epicenter/api",
	"type": "module",
	"scripts": {
		"dev": "bun run dev:local",
		"dev:local": "[ -f .dev.vars ] || cp .dev.vars.example .dev.vars && wrangler dev --port 8787 --inspector-port 9229",
		"dev:infisical": "infisical export > .dev.vars && wrangler dev --port 8787 --inspector-port 9229",
		"deploy": "wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"format": "prettier --write .",
		"lint": "eslint --fix ."
	},
	"dependencies": {
		"@hono/trpc-server": "^0.4.0",
		"@repo/db": "workspace:*",
		"@trpc/server": "^11.0.3",
		"arktype": "^2.1.20",
		"better-auth": "^1.3.3",
		"drizzle-orm": "^0.44.3",
		"hono": "^4.8.5",
		"nanoid": "^5.0.9",
		"wellcrafted": "catalog:"
	},
	"devDependencies": {
		"@repo/config": "workspace:*",
		"@repo/constants": "workspace:*",
		"eslint": "^9.31.0",
		"prettier": "^3.6.2",
		"wrangler": "^4.26.1"
	},
	"exports": {
		".": "./src/index.ts"
	}
}
